<div class="container">
    <div class="row">
        <div class="col s-6">
            <h1>Climbs</h1>
        </div>
        <div class="col offset-s4 s-2 add-btn ">
            <a class="btn-floating btn-large waves-effect waves-light light-green darken-1 modal-trigger" href="#addtick"><i class="material-icons">add</i></a>
        </div>
    </div>
    <div id="addtick" class="modal">
        <div class="modal-content">
            <h4>New Climb</h4>
            <div class="row">
                <form class="col s12" method="post" action="/users/ticks">
                    <div class="row">
                        <div class="input-field col s6">
                            <input name="name" id="name" type="text" class="validate" required>
                            <label for="name">Name of Route</label>
                        </div>
                        <div class="input-field col s6">
                            <input name="area" id="area" type="text" class="validate" required>
                            <label for="area">Name of Crag</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input name="grade" id="grade" type="text" class="validate">
                            <label for="grade">Grade</label>
                        </div>
                        <div class="input-field col s6">
                            <select name="style">
                                <option value="bouldering">Bouldering</option>
                                <option value="sport">Sport</option>
                                <option value="traditional">Traditional</option>
                            </select>
                            <label>Climbing Style</label>
                        </div>
                    </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" name="action" class="modal-action waves-effect waves-green btn-flat">Save</button>
            <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
        </div>
        </form>
    </div>

    <div class="row">
        <table class="highlight">
            <thead>
                <tr>
                    <th data-field="name_area">Route &amp; Crag Name</th>
                    <th data-field="grade_style">Grade &amp; Style</th>
                </tr>
            </thead>

            <tbody>
                {{#each data}}

                    <tr id="{{id}}">
                        <td><a href="/attempts/ticks/{{id}}">{{name}}<br>-{{area}}</a></td>
                        <td>{{grade}}<br>-{{style}}</td>
                        <!-- <td class="tick_id" style="display: none">{{id}}</td> -->
                    </tr>

                {{/each}}
            </tbody>
        </table>
    </div>
</div>
