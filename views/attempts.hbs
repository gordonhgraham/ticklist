<div class="container">
    <div class="row">
        <div class="col s-6">
            <h1>Attempts On:</h1>
            <h4>{{tick.name}}	&mdash; {{tick.grade}}, {{tick.style}}</h4>
            <h5>{{tick.area}}</h5>
        </div>
        <div class="col offset-s4 s-2 add-btn ">
            <a class="btn-floating btn-large waves-effect waves-light light-green darken-1 modal-trigger" href="#addAttempt"><i class="material-icons">add</i></a>
        </div>
    </div>
    <div id="addAttempt" class="modal">
        <div class="modal-content">
            <h4>New Attempt</h4>
            <div class="row">
                <form class="col s12" method="post" action="/attempts/ticks/{{tick_id}}">
                    <div class="row">
                        <div class="input-field col s6">
                            <select name="send_type">
                              <option value="Top Rope">Top Rope</option>
                              <option value="Lead">Lead</option>
                              <option value="Red Point">Red Point</option>
                              <option value="Flash">Flash</option>
                              <option value="Onsight">Onsight</option>
                          </select>
                            <label>Send Type</label>
                        </div>
                        <div class="input-field col s6">
                            <input name="partner" id="partner" type="text" class="validate">
                            <label for="partner">Name of Partner</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <textarea id="notes" name="notes" class="materialize-textarea"></textarea>
                            <label for="notes">Notes</label>
                        </div>
                    </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" name="action" class="modal-action waves-effect waves-green btn-flat">Save</button>
            <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
        </div>
        </form>
    </div>

    <div class="row">
        <table class="highlight">
            <thead>
                <tr>
                    <th data-field="send_type">Send Type</th>
                    <th data-field="partner">Partner</th>
                    <th data-field="notes">Notes</th>
                </tr>
            </thead>

            <tbody>
                {{#each attempts}}
                    <tr>
                        <td>{{send_type}}</td>
                        <td>{{partner}}</td>
                        <td>{{notes}}</td>
                        <td>
                            <a class="btn-floating btn-small waves-effect waves-light yellow click-to-toggle modal-trigger" href="#editAttempt{{id}}"><i class="material-icons">edit</i></a>
                            <a class="btn-floating btn-small waves-effect waves-light orange click-to-toggle" href="/attempts/delete/?tick_id={{tick_id}}&atmpt_id={{id}}"><i class="material-icons">delete</i></a>
                        </td>
                    </tr>
                    <div id="editAttempt{{id}}" class="modal">
                        <div class="modal-content">
                            <h4>Edit Attempt</h4>
                            <div class="row">
                                <form class="col s12" method="post" action="/attempts/edit/?tick_id={{tick_id}}&atmpt_id={{id}}">
                                    <div class="row">
                                        <div class="input-field col s6">
                                            <select name="send_type" value="{{style}}">
                                              <option value="Top Rope">Top Rope</option>
                                              <option value="Lead">Lead</option>
                                              <option value="Red Point">Red Point</option>
                                              <option value="Flash">Flash</option>
                                              <option value="Onsight">Onsight</option>
                                          </select>
                                            <label>Send Type</label>
                                        </div>
                                        <div class="input-field col s6">
                                            <input name="partner" id="partner" type="text" class="validate" value="{{partner}}">
                                            <label for="partner">Name of Partner</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <textarea id="notes" name="notes" class="materialize-textarea">{{notes}}</textarea>
                                            <label for="notes">Notes</label>
                                        </div>
                                    </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" name="action" class="modal-action waves-effect waves-green btn-flat">Save</button>
                            <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
                        </div>
                        </form>
                    </div>
                {{/each}}
            </tbody>
        </table>
    </div>

</div>
